<!-- Table -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary"><%= controller_name.capitalize %> Cadastrados(as)</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="userTable" width="100%" cellspacing="0">
        <thead>
          <tr role="row">
            <th class="sorting_asc" rowspan="1" colspan="1">Tipo</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Descrição</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Opções</th>
          </tr>
       </thead>

       <tbody>
          <% @tipificacoes.each do |tipificacao| %> 
            <tr>
              <td><%= tipificacao.tipo %></td>
              <td><%= tipificacao.descricao %></td>
              <td>
                <%= link_to tipificacao, :class => "btn btn-primary btn-icon-split btn-sm", :method => :get do %>
                  <span class="icon text-white-50"><i class="fas fa-flag"></i></span>
                  <span class="text">Visualizar</span>
                <% end %>
                <%= link_to edit_tipificacao_path(tipificacao), :class => "btn btn-warning btn-icon-split btn-sm", :method => :get do %>
                  <span class="icon text-white-50"><i class="fas fa-exclamation-triangle"></i></span>
                  <span class="text">Editar</span>
                <% end %>
                <%= link_to tipificacao, :class => "btn btn-danger btn-icon-split btn-sm", :method => :delete, data: { confirm: "Tem certeza que deseja excluir o(a) #{controller_name.singularize} #{tipificacao.tipo}?" } do %>
                    <span class="icon text-white-50"><i class="fas fa-trash"></i></span>
                    <span class="text">Excluir</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%== pagy_bootstrap_nav(@pagy) %>
	</div>
</div>
<!-- End of Table -->