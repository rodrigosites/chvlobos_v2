<!-- Table -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary"><%= controller_name.capitalize %> Inativos <small>// Quantidade: <%= @inativos.size %></h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="userTable" width="100%" cellspacing="0">
        <thead>
          <tr role="row">
            <th class="sorting_asc" rowspan="1" colspan="1" style="width: 3%;">Nº</th>
            <th class="sorting_asc" rowspan="1" colspan="1" style="width: 34%;">Nome</th>
            <th class="sorting_asc" rowspan="1" colspan="1" style="width: 15%;">Telefone</th>
            <th class="sorting_asc" rowspan="1" colspan="1" style="width: 15%;">Celular</th>
            <th class="sorting_asc" rowspan="1" colspan="1" style="width: 33%;">Opções</th>
          </tr>
       </thead>

       <tbody>
       		<% @clientes.each do |cliente| %>
			      <tr>
              <td><%= cliente.id %></td>
			        <td><%= cliente.nome %></td>
			        <td><%= cliente.telefone %></td>
			        <td><%= cliente.celular %></td>
              <td>
                <%= link_to cliente, :class => "btn btn-primary btn-icon-split btn-sm", :method => :get do %>
                  <span class="icon text-white-50"><i class="fas fa-flag"></i></span>
                  <span class="text">Abrir</span>
                <% end %>
                <%= link_to edit_cliente_path(cliente), :class => "btn btn-warning btn-icon-split btn-sm", :method => :get do %>
                  <span class="icon text-white-50"><i class="fas fa-exclamation-triangle"></i></span>
                  <span class="text">Editar</span>
                <% end %>
                <%= link_to alterna_cliente_path(cliente), :class => "btn btn-danger btn-icon-split btn-sm", :method => :get, data: { confirm: "Tem certeza que deseja reativar o(a) #{controller_name.singularize} #{cliente.nome}?" } do %>
                  <span class="icon text-white-50"><i class="fas fa-trash"></i></span>
                  <span class="text">Reativar</span>
                <% end %>
              </td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
    <%== pagy_bootstrap_nav(@pagy) %>
	</div>
</div>
<!-- End of Table -->