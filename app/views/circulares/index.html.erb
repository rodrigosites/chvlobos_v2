<!-- Table -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary"><%= controller_name.capitalize %> Cadastrados(as) <small>// Vigente: <u>Circular nº <%= @circular_vigente.numero_circular %></u></h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="userTable" width="100%" cellspacing="0">
        <thead>
          <tr role="row">
            <th class="sorting_asc" rowspan="1" colspan="1">Circular</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Data</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Curso Básico</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Curso Extra</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Taxa de Matrícula</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Salário por Aula</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Opções</th>
          </tr>
       </thead>

       <tbody>
          <tr>
            <td><%= @circular_vigente.numero_circular %></td>
            <td><%= I18n.l(@circular_vigente.data_circular) %></td>
            <td><%= number_to_currency(@circular_vigente.valor_mensalidade) %></td>
            <td><%= number_to_currency(@circular_vigente.valor_extra) %></td>
            <td><%= number_to_currency(@circular_vigente.taxa_matricula) %></td>
            <td><%= number_to_currency(@circular_vigente.salario_aula) %></td>
            <td>
              <%= link_to @circular_vigente, :class => "btn btn-primary btn-icon-split btn-sm", :method => :get do %>
                <span class="icon text-white-50"><i class="fas fa-flag"></i></span>
                <span class="text">Visualizar</span>
              <% end %>
              <%= link_to edit_circular_path(@circular_vigente), :class => "btn btn-warning btn-icon-split btn-sm", :method => :get do %>
                <span class="icon text-white-50"><i class="fas fa-exclamation-triangle"></i></span>
                <span class="text">Editar</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered" id="userTable" width="100%" cellspacing="0">
        <thead>
          <tr role="row">
            <th class="sorting_asc" rowspan="1" colspan="1">Circular</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Data</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Curso Básico</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Curso Extra</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Taxa de Matrícula</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Salário por Aula</th>
            <th class="sorting_asc" rowspan="1" colspan="1">Opções</th>
          </tr>
       </thead>

       <tbody>
       		<% @circulares_inativas.each do |circular| %>
			      <tr>
              <td><%= circular.numero_circular %></td>
              <td><%= I18n.l(circular.data_circular) %></td>
              <td><%= number_to_currency(circular.valor_mensalidade) %></td>
              <td><%= number_to_currency(circular.valor_extra) %></td>
              <td><%= number_to_currency(circular.taxa_matricula) %></td>
              <td><%= number_to_currency(circular.salario_aula) %></td>
              <td>
                <%= link_to circular, :class => "btn btn-primary btn-icon-split btn-sm", :method => :get do %>
                  <span class="icon text-white-50"><i class="fas fa-flag"></i></span>
                  <span class="text">Visualizar</span>
                <% end %>
                <%= link_to edit_circular_path(circular), :class => "btn btn-warning btn-icon-split btn-sm", :method => :get do %>
                  <span class="icon text-white-50"><i class="fas fa-exclamation-triangle"></i></span>
                  <span class="text">Editar</span>
                <% end %>
                <%= link_to circular_vigente_path(id: circular.id), :class => "btn btn-success btn-icon-split btn-sm", :method => :post do %>
                  <span class="icon text-white-50"><i class="fas fa-check"></i></span>
                  <span class="text">Ativar</span>
                <% end %>
              </td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
    <%== pagy_bootstrap_nav(@pagy) %>
	</div>
</div>
<!-- End of Table -->