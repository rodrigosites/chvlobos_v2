<!-- Dropdown Card Example -->
<div class="card shadow mb-4">
  <!-- Card Header - Dropdown -->
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 font-weight-bold text-primary">Circular nº <%= @circular.numero_circular %> - Status: <u><%= @circular.vigente ? "Vigente" : "Inativa" %></u></h6>
    <div class="dropdown no-arrow">
      <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
      </a>
      <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
        <div class="dropdown-header">Ações:</div>
        <%= link_to "Editar dados", edit_circular_path(@circular), class: "dropdown-item" %>
        <%= link_to "Tornar Vigente", circular_vigente_path(id: @circular.id), { class: "dropdown-item", :method => :post } %>
      </div>
    </div>
  </div>

  <!-- Card Body -->
  <div class="card-body">
  	<div class="form-group row">
  	<div class="col-sm-6 mb-3 mb-sm-0">
     	<ul class="list-group">
	      <li class="list-group-item"><b>Data da Circular:</b> <%= I18n.l(@circular.data_circular) %></li>
        <li class="list-group-item"><b>Custo Anual do Curso Básico:</b> <%= number_to_currency(@circular.valor_mensalidade*12) %></li>
        <li class="list-group-item"><b>Custo Anual do Instrumento Extra:</b> <%= number_to_currency(@circular.valor_extra*12) %></li>
        <li class="list-group-item"><b>Custo Anual do Curso de Canto Profissional:</b> <%= number_to_currency(@circular.valor_profissionalizante*12) %></li>
        <li class="list-group-item"><b>Valor do Desconto:</b> <%= number_to_currency(@circular.desconto) %> (<%= (@circular.desconto / @circular.valor_mensalidade * 100).to_i %>%)</li>
	    </ul>
	  </div>
	  <div class="col-sm-6">
	    <ul class="list-group">
	      <li class="list-group-item"><b>Mensalidade do Curso Básico:</b> <%= number_to_currency(@circular.valor_mensalidade) %></li>
        <li class="list-group-item"><b>Mensalidade do Instrumento Extra:</b> <%= number_to_currency(@circular.valor_extra) %></li>
        <li class="list-group-item"><b>Mensalidade do Curso de Canto Profissional</b> <%= number_to_currency(@circular.valor_profissionalizante) %></li>
        <li class="list-group-item"><b>Taxa de Matrícula:</b> <%= number_to_currency(@circular.taxa_matricula) %></li>
        <li class="list-group-item"><b>Salário Padrão por Aula:</b> <%= number_to_currency(@circular.salario_aula) %></li>
	    </ul>
	  </div>
	</div>

</div>